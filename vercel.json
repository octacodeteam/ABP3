{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "buildCommand": "npm run build" }
    },
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.ts"
    },
    {
      "src": "/mapa.html",
      "dest": "/mapa.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/[^/.]+",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" }
  ]
}