{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.ts"
    },
    {
      "src": "/mapa.html",
      "dest": "/mapa.html"
    },
      "src": "/[^/.]+",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "frontend/dist/index.html" }
  ],
  "github": {
    "silent": true
  }
}